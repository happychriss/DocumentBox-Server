<ul class="doc_sort_list">
  <% document.pages.each do |page| %>
      <li id=<%= 'page_'+page.id.to_s %> draggable="true" class="sortable">
        <div class='preview prevent_drag'>
          <%= render :partial => "links_page_edit", :layout => '/show_page', :locals => {:page => page} %>
        </div>
        <input type='hidden' name='order_pages[]' value=<%= page.id %>/>
      </li>
  <% end %>
</ul>

