// this is called by the pusher.rb to update the page
var pic = $('img#<%= page.id%>.no_clickzoom');
pic.attr('src', pic.attr('preview_path'));


<% if page.status==Page::UPLOADED_PROCESSED  %>
    $('#completed_ind_<%= page.id%>').css('visibility', 'visible');
    pic.addClass('clickzoom');
    pic.removeClass('no_clickzoom');
<% else %>
    $('#completed_ind_<%= page.id%>').css('visibility', 'hidden');
<% end %>

<% if (page.status==Page::UPLOADED_PROCESSING or page.status==Page::UPLOADED)   %>
    $('#process_ind_<%= page.id%>').css('visibility', 'visible');
<% else %>
    $('#process_ind_<%= page.id%>').css('visibility', 'hidden');
<% end %>


<% if (page.status==Page::UPLOADED)   %>
    $('#attention_ind_<%= page.id%>').css('visibility', 'visible');
<% else %>
    $('#attention_ind_<%= page.id%>').css('visibility', 'hidden');
<% end %>



