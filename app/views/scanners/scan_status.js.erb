// Updates the scanner status headline, enables the scanner icons when scanner is completed
<% publish_to "/scanner_status_update" do %>
$('#scanner_status').text("<%=h @message%>");
<% if @scan_complete then %>
    $('#scann_working_spinner').hide();
    $('#scann_button').prop('disabled', false);
    $('#color').prop('disabled', false);
<% end %>
<% end %>